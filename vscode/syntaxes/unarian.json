{
	"name": "Unarian",
	"fileTypes": [
		"unarian"
	],
	"scopeName": "source.unarian",
    
	"foldingStartMarker": "(?<!\\S)\\{\\s*$",
	"foldingStopMarker": "^\\s*\\}(?!\\S)",
	
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#function" },
		{ "include": "#definition" }
    ],
    "repository": {
		"comment": {
			"name": "comment.line",
			"match": "(#).*$",
			"captures": {
				"1": { "name": "comment.line.number-sign" }
			}
		},
		"function": {
			"name": "variable.function",
			"match": "(?<!\\S)(\\S{2,}|[^-+?!{|}])(?!\\S)"
		},
		"definition": {
			"name": "meta.definition",
			"begin": "(?<!\\S)(\\{)(?!\\S)",
			"end": "(?<!\\S)(\\})(?!\\S)",
			"beginCaptures": {
				"1": { "name": "variable.function" }
			},
			"endCaptures": {
				"1": { "name": "variable.function" }
			},
			"patterns": [
				{ "include": "#comment" },
				{ "include": "#term" },
				{ "include": "#alternation" }
			]
		},
		"group": {
			"name": "meta.group",
			"begin": "(?<!\\S)(\\{)(?!\\S)",
			"end": "(?<!\\S)(\\})(?!\\S)",
			"beginCaptures": {
				"1": { "name": "keyword.control" }
			},
			"endCaptures": {
				"1": { "name": "keyword.control" }
			},
			"patterns": [
				{ "include": "#comment" },
				{ "include": "#term" },
				{ "include": "#alternation" }
			]
		},
		"term": {
			"patterns": [
				{ "include": "#comment" },
				{ "include": "#builtin" },
				{ "include": "#identifier" },
				{ "include": "#group" }
			]
		},
		"builtin": {
			"name": "constant.language",
			"match": "(?<!\\S)[-+?!](?!\\S)"
		},
		"identifier": {
			"name": "entity.name.function",
			"match": "(?<!\\S)(\\S{2,}|[^-+?!{|}])(?!\\S)"
		},
		"alternation": {
			"name": "keyword.control",
			"match": "(?<!\\S)\\|(?!\\S)"
		}
	}
}